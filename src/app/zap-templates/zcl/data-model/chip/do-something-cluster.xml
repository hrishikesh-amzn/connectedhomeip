<configurator>
  <domain name="CHIP"/>
  <cluster>
    <domain>Media</domain>
    <name>Do Something Cluster</name>
    <code>0x0034</code>
    <define>DO_SOMETHING_CLUSTER</define>
    <client init="false" tick="false">true</client>
    <server init="false" tick="false">true</server>
    <description>This is a test clsuter.</description>

    <command source="client" code="0x00" name="DoSomething" optional="false">
      <description>Upon receipt, this SHALL do something</description>
      <arg name="data" type="CHAR_STRING"/>
    </command>

    <command source="server" code="0x01" name="DoSomethingResponse" optional="false">
      <description>This command SHALL be generated in response to a DoSomething Request command.</description>
      <arg name="data" type="CHAR_STRING"/>
    </command>

  </cluster>
</configurator>
